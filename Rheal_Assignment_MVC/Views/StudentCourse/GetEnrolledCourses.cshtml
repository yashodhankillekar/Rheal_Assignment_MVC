@model IEnumerable<Rheal_Assignment_MVC.Models.StudentCourse>

<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseId.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseId.CourseTrainer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentId.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isCompleted)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId.CourseTrainer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isCompleted)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RowId }) |
                @Html.ActionLink("Details", "Details", new { id = item.RowId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RowId })
            </td>
        </tr>
    }

</table>
